<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/linearLayout"
    tools:context=".MainActivity">




    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="3dp"
        android:text="Travel Photos App" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">


        <ImageView
            android:id="@+id/pic0"
            android:layout_width="407dp"
            android:layout_height="366dp"
            app:layout_constraintBottom_toBottomOf="@+id/pic3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.438"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.404"
            app:srcCompat="@drawable/pic0" />

        <ImageView
            android:id="@+id/pic1"
            android:layout_width="411dp"
            android:layout_height="353dp"
            android:alpha="0"
            app:layout_constraintBottom_toBottomOf="@+id/pic0"
            app:layout_constraintTop_toTopOf="@+id/pic0"
            app:layout_constraintVertical_bias="0.307"
            app:srcCompat="@drawable/pic1"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-35dp" />

        <ImageView
            android:id="@+id/pic2"
            android:layout_width="406dp"
            android:layout_height="342dp"
            android:layout_marginTop="4dp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="@+id/pic0"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pic2"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/pic3"
            android:layout_width="406dp"
            android:layout_height="369dp"
            android:layout_marginTop="8dp"
            android:alpha="0"
            app:layout_constraintEnd_toEndOf="@+id/pic0"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/pic3" />

        <ImageView
            android:id="@+id/pic4"
            android:layout_width="403dp"
            android:layout_height="347dp"
            android:alpha="0"
            app:srcCompat="@drawable/pic4"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="-36dp"
            tools:layout_editor_absoluteY="5dp" />

        <ImageView
            android:id="@+id/pic5"
            android:layout_width="410dp"
            android:layout_height="340dp"
            android:alpha="0"
            app:srcCompat="@drawable/pic5"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="0dp" />

        <ImageView
            android:id="@+id/pic6"
            android:layout_width="407dp"
            android:layout_height="338dp"
            android:alpha="0"
            app:srcCompat="@drawable/pic6"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="2dp"
            tools:layout_editor_absoluteY="6dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnPrev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_media_rew" />

        <ImageButton
            android:id="@+id/btnNext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_media_ff" />
    </LinearLayout>

    <TextView
        android:id="@+id/tVName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="20dp"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="15dp"
        android:text="Sigiriya" />
</LinearLayout>

